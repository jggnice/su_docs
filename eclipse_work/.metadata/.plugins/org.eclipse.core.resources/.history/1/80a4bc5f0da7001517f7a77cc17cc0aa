package huarongdao;
import java.awt.Button;
import java.awt.Color;
import java.awt.Rectangle;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.FocusEvent;
import java.awt.event.FocusListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

import javax.swing.JFrame;
public class MoveExample
{
	public static void main(String args[])
	{
		new Hua_Rong_Road();
	}
}
@SuppressWarnings("serial")
class Person extends Button implements FocusListener
{
	int number;
	Color c = new Color(255, 245, 170);
	Person(int number, String s)
	{
		super(s);
		setBackground(c);
		this.number = number;
		c = getBackground();
		addFocusListener(this);
	}

	public void focusGained(FocusEvent e)
	{
		setBackground(Color.red);
	}
	public void focusLost(FocusEvent e)
	{
		setBackground(c);
	}
}
@SuppressWarnings("serial")
class Hua_Rong_Road extends JFrame
		implements
			MouseListener,
			KeyListener,
			ActionListener
{
	final static int ³¤±ß = 100;
	final static int ¶Ì±ß = 50;
	final static int relative_left_bound = 54;
	final static int frame_position = 120;
	final static int dx = 5;
	Person person[] = new Person[10];
	Button left, right, above, below;
	Button restart = new Button("ÖØÐÂ¿ªÊ¼");
	public Hua_Rong_Road()
	{
		init();
		setBounds(frame_position, frame_position, 3*³¤±ß+4*dx, 3*³¤±ß+12*dx);
		setVisible(true);
		validate();
		addWindowListener(new WindowAdapter() {
			public void windowClosing(WindowEvent e)
			{
				System.exit(0);
			}
		});
	}
	public void init()
	{
		setLayout(null);
		add(restart);
		restart.setBounds(³¤±ß, dx, ³¤±ß, ¶Ì±ß/2);
		restart.addActionListener(this);
		String name[] = {"²Ü²Ù", "¹ØÓð", "ÕÅ·É", "Áõ±¸", "ÕÔÔÆ", "»ÆÖÒ", "±ø", "±ø", "±ø", "±ø"};
		for (int k = 0; k < name.length; k++)
		{
			person[k] = new Person(k, name[k]);
			person[k].addMouseListener(this);
			person[k].addKeyListener(this);
			add(person[k]);
		}
		person[0].setBounds(relative_left_bound+¶Ì±ß, relative_left_bound, ³¤±ß, ³¤±ß);
		person[1].setBounds(relative_left_bound+¶Ì±ß, relative_left_bound+³¤±ß, ³¤±ß, ¶Ì±ß);
		person[2].setBounds(relative_left_bound, relative_left_bound+³¤±ß, ¶Ì±ß, ³¤±ß);
		person[3].setBounds(relative_left_bound+3*¶Ì±ß, relative_left_bound+³¤±ß, ¶Ì±ß, ³¤±ß);
		person[4].setBounds(relative_left_bound, relative_left_bound, ¶Ì±ß, ³¤±ß);
		person[5].setBounds(relative_left_bound+3*¶Ì±ß, relative_left_bound, ¶Ì±ß, ³¤±ß);
		person[6].setBounds(relative_left_bound, relative_left_bound+4*¶Ì±ß, ¶Ì±ß, ¶Ì±ß);
		person[7].setBounds(relative_left_bound+3*¶Ì±ß, relative_left_bound+4*¶Ì±ß, ¶Ì±ß, ¶Ì±ß);
		person[8].setBounds(relative_left_bound+¶Ì±ß, relative_left_bound+3*¶Ì±ß, ¶Ì±ß, ¶Ì±ß);
		person[9].setBounds(relative_left_bound+³¤±ß, relative_left_bound+3*¶Ì±ß, ¶Ì±ß, ¶Ì±ß);
		person[9].requestFocus();
		left = new Button();
		right = new Button();
		above = new Button();
		below = new Button();
		add(left);
		add(right);
		add(above);
		add(below);
		left.setBounds(relative_left_bound-dx, relative_left_bound-dx, dx, 5*¶Ì±ß+2*dx);
		right.setBounds(relative_left_bound+4*¶Ì±ß, relative_left_bound-dx, dx, 5*¶Ì±ß+2*dx);
		above.setBounds(relative_left_bound-dx, relative_left_bound-dx, 4*¶Ì±ß+2*dx, dx);
		below.setBounds(relative_left_bound-dx, relative_left_bound+5*¶Ì±ß, 4*¶Ì±ß+2*dx, dx);
		validate();
	}
	public void keyTyped(KeyEvent e)
	{
	}
	public void keyReleased(KeyEvent e)
	{
	}
	public void keyPressed(KeyEvent e)
	{
		Person man = (Person) e.getSource();
		if (e.getKeyCode() == KeyEvent.VK_DOWN)
		{
			go(man, below);
		}
		if (e.getKeyCode() == KeyEvent.VK_UP)
		{
			go(man, above);
		}
		if (e.getKeyCode() == KeyEvent.VK_LEFT)
		{
			go(man, left);
		}
		if (e.getKeyCode() == KeyEvent.VK_RIGHT)
		{
			go(man, right);
		}
	}
	public void mousePressed(MouseEvent e)
	{
		Person man = (Person) e.getSource();
		int x = -1, y = -1;
		x = e.getX();//the horizontal x posit\ion of the event relative to the source component
		y = e.getY();
		int w = man.getBounds().width;
		int h = man.getBounds().height;
		if (y > h / 2)
		{
			go(man, below);
		}
		if (y < h / 2)
		{
			go(man, above);
		}
		if (x < w / 2)
		{
			go(man, left);
		}
		if (x > w / 2)
		{
			go(man, right);
		}
	}
	public void mouseReleased(MouseEvent e)
	{
	}
	public void mouseEntered(MouseEvent e)
	{
	}
	public void mouseExited(MouseEvent e)
	{
	}
	public void mouseClicked(MouseEvent e)
	{
	}
	public void go(Person man, Button direction)
	{
		boolean move = true;
		Rectangle manRect = man.getBounds(); 
		int x = man.getBounds().x; 
		int y = man.getBounds().y;
		if (direction == below)
		{
			y = y + ¶Ì±ß;
		} else if (direction == above)
		{
			y = y - ¶Ì±ß;
		} else if (direction == left)
		{
			x = x - ¶Ì±ß;
		} else if (direction == right)
		{
			x = x + ¶Ì±ß;
		}
		manRect.setLocation(x, y);
		Rectangle directionRect = direction.getBounds();
		for (int k = 0; k < 10; k++)
		{
			Rectangle personRect = person[k].getBounds();
			if ((manRect.intersects(personRect)) && (man.number != k))
			{
				move = false;//Åöµ½ÆäËûÈËÎï
			}
		}
		if (manRect.intersects(directionRect))
		{
			move = false;//Åöµ½±ß½ç¿ò
		}
		if (move == true)
		{
			man.setLocation(x, y);
		}
	}
	public void actionPerformed(ActionEvent e)
	{
		dispose();
		new Hua_Rong_Road();
	}
}